{

general: {

	// you need at least one project directoy here for fuzzy match and grep match file openers
	"MainControl_searchPaths": [
		// "/home/<your_user/projects/foo",
	],

	// set this to the absolute path to override the default commands
	// commandsPath: "/home/<your_user>/commands.json",

	"MainControl_startupTabs": [
		{ "type": "FuzzyOpener", "path": "", },
	],
	
	"MainControl_openInPlace": 0,
	"MainControl_autoSortTabs": 0,
	
	// Theme Settings
	"Theme_path": "default_dark.json",	
},

buffer: {
	"linesPerScrollWheel": 3,
	"cursorBlinkEnable": 1,
	"cursorBlinkOffTime": 0.600,
	"cursorBlinkOnTime": 0.600,
	"highlightCurrentLine": 1,
	"outlineCurrentLine": 1,
	"outlineCurrentLineYOffset": 0,
	"lineNumExtraWidth": 10,
	"lineNumBase": 10, // 2-36
	"showLineNums": 1,
	"charWidth": 8,
	"lineHeight": 17,
	"tabWidth": 4,
	
	"font": "Courier New",
	"fontSize": 14,
	"invertSelection": 1,
	"maxUndo": 4096,
	"statusBarHeight": 20,
	// "MainControl_searchPaths": ["foo", "bar"],
},
	
gui: {
	"hideScrollbar": 0,
	"hideStatusBar": 0,
	
	"fontList": [
		"Arial",
		"Courier New"
	],
	
	"fontSize_fw": 14,
},

}
